//    resumeTask(0x04);
//    printf("R4 -TCB to Run: 0x%lX\n\r\n\r", getTCBReady());
//    }
//    suspendTask(0x03);
//   delayTask(0x03, 0x05);
//    printf("TCB to Run: 0x%lX\n\r", getTCBReady());
 //   printf("Delay to Ins: 0x%lX\n\r",  Xil_In32((XPAR_AXI_INTERFACE_0_S00_AXI_BASEADDR) + (AXI_INTERFACE_S00_AXI_SLV_REG2_OFFSET)));

//    suspendTask(0x01);
